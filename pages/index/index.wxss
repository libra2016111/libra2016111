.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

button {
  background-color: #007aff;
  color: #fff;
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  font-size: 16px;
  margin-bottom: 20px;
}

input[type="number"] {
  border: none;
  border-radius: 5px;
  padding: 10px;
  font-size: 24px;
  text-align: center;
  width: 200px;
}